<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@android:color/white"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgWorkerAva"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/txtLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/imgWorkerAva"
            android:layout_toRightOf="@+id/imgWorkerAva"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            tools:text="Петров" />

        <TextView
            android:id="@+id/txtFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLastName"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/imgWorkerAva"
            android:layout_toRightOf="@+id/imgWorkerAva"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            tools:text="Петя" />

        <TextView
            android:id="@+id/txtWorkerAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFirstName"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/txtWorkerAgeInfo"
            android:layout_toRightOf="@+id/txtWorkerAgeInfo"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="16" />

        <TextView
            android:id="@+id/txtWorkerAgeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFirstName"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/imgWorkerAva"
            android:layout_toRightOf="@+id/imgWorkerAva"
            android:text="@string/age"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>